@if (Context?.User?.Identity is not null && Context.User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-capitalize text-primary" asp-controller="Account" asp-action="Logout">@Context.User.Identity.Name - Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-capitalize" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}