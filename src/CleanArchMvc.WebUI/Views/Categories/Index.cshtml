@model IEnumerable<CleanArchMvc.Application.DTOs.Categories.CategoryDto>

@{
    ViewData["Title"] = "Categories Management";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>

<hr />

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Register New" class="fa fa-plus"></span>&nbsp;Register New
                </a>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <table class="table table-borderless table-striped">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Name)
            </th>
            <th>
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => category.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" title="Edit" class="btn btn-warning btn-sm">
                            <span class="fa fa-edit"></span>&nbsp;Edit
                        </a>
                        
                        <a asp-action="Details" asp-route-id="@category.Id" title="Edit" class="btn btn-info btn-sm">
                            <span class="fa fa-search"></span>&nbsp;Details
                        </a>
                        
                        <a asp-action="Delete" asp-route-id="@category.Id" title="Edit" class="btn btn-danger btn-sm">
                            <span class="fa fa-trash-alt"></span>&nbsp;Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
