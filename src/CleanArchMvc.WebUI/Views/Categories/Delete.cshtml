@model CleanArchMvc.Application.DTOs.Categories.CategoryDto

@{
    ViewData["Title"] = $"Delete {Model.Name}";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <button type="submit" class="btn btn-danger"><span class="fas fa-trash-alt"></span>&nbsp;Delete</button>
        <a asp-action="Index" class="btn btn-info"><span class="fas fa-undo-alt"></span>Back to List</a>
    </form>
</div>
