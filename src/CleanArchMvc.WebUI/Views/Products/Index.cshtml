@model IEnumerable<CleanArchMvc.Application.DTOs.Products.ProductDto>

@{
    ViewData["Title"] = "Products Management";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>

<hr />

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Register New" class="fas fa-plus"></span> Register New
                </a>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <table class="table table-borderless table-striped">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Name)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Description)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Price)
            </th>
            <th>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => category.Description)
                </td>
                <td>
                    <money>@Html.DisplayFor(modelItem => category.Price)</money>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" title="Edit" class="btn btn-warning btn-sm">
                        <span class="fas fa-edit">Edit</span>
                    </a>
                        
                    <a asp-action="Details" asp-route-id="@category.Id" title="Edit" class="btn btn-info btn-sm">
                        <span class="fas fa-search">Details</span>
                    </a>
                        
                    <a asp-action="Delete" asp-route-id="@category.Id" title="Edit" class="btn btn-danger btn-sm">
                        <span class="fas fa-trash-alt">Delete</span>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>